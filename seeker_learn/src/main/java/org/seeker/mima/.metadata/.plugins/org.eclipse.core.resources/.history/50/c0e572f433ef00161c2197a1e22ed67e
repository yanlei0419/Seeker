package org.vegetto.common.base.db.result;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.List;

import org.vegetto.common.base.db.interfaces.IResultSetHandler;
import org.vegetto.common.base.db.interfaces.IRowProcessor;
@Deprecated
public class BeanListHandler<T> implements IResultSetHandler<List<T>> {
	private final Class<T> type;
	private final IRowProcessor convert;

//	public BeanListHandler() {
//		this.type = GenericsUtils.getSuperClassGenricType(BeanListHandler.class);
//		this.convert = ArrayHandler.ROW_PROCESSOR;
//	}

	public BeanListHandler(Class<T> type) {
		this(type, ArrayHandler.ROW_PROCESSOR);
	}

	public BeanListHandler(Class<T> type, IRowProcessor convert) {
		this.type = type;
		this.convert = convert;
	}

	public List<T> handle(ResultSet rs) throws SQLException {
		return this.convert.toBeanList(rs, this.type);
	}
}