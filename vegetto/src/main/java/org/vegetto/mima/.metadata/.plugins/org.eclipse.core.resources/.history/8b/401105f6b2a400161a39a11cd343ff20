package org.pbccrc.util;

import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

/**
 * @author Shengxingya<br/>
 *         2014-4-10 上午11:44:50<br/>
 */
public class DateUtils {
	private static SimpleDateFormat yyyyMMsdf = new SimpleDateFormat("yyyyMM");
	private static SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");

	/**
	 * 获取本月第一天的字符串形式，日期格式为 yyyymmdd
	 * 
	 * @return
	 */
	public static String getFirstDayOfMonth() {
		return yyyyMMsdf.format(new Date()) + "01";
	}
	
	/**
	 * 获取本月第一天的字符串形式，日期格式为 yyyymmdd
	 * 
	 * @return
	 */
	public static String getThisYearAndMonth() {
		return yyyyMMsdf.format(new Date());
	}
	
	/**
	 * 返回给定日期的字符串形式，日期格式为yyyy-MM-dd HH:mm:ss
	 * @param date
	 * @return
	 */
	public static String  getFullDateString(Date date) {
		return sdf.format(date);
	}
	
	
	/**
	 * 获取给定日期上一个月日期
	 * @param date
	 * @return
	 */
	public static String getPreviousMonthDateString(Date date){
		Calendar calendar=Calendar.getInstance();
		calendar.setTime(date);
		calendar.add(Calendar.MONTH, -1);
		return yyyyMMsdf.format(calendar.getTime());
	}
	/**
	 * 获取上一个月日期
	 * @return
	 */
	public static String getPreviousMonthDateString(){
		return getPreviousMonthDateString(new Date());
	}
	
	/**
	 * 获取上月第一天的字符串形式，日期格式为 yyyymmdd
	 * 
	 * @return
	 */
	public static String getFirstDayOfPreviousMonth() {
		
		return getPreviousMonthDateString()+"01";
	}
	
	/**
	 * 获取本月第一天的日期
	 * 
	 * @return
	 */
	public static Date getFirstDayOfMonth_date() {
		Calendar calendar=Calendar.getInstance();
		calendar.setTime(new Date());
		calendar.set(Calendar.DAY_OF_MONTH, 1);
		calendar.set(Calendar.HOUR_OF_DAY, 0);
		calendar.set(Calendar.MINUTE, 0);
		calendar.set(Calendar.SECOND, 0);
		return calendar.getTime();
	}
	
	/**
	 * 获取今天到下个月今天的毫秒数
	 * @return
	 */
	public static long getMillisecondOfNextMonthDay(){
		Calendar calendar=Calendar.getInstance();
		calendar.setTime(new Date());
		calendar.add(Calendar.MONTH, 1);
		return calendar.getTimeInMillis()-new Date().getTime();
		
	}
	
	
	/**
	 * 获取给定时间的N天后的Date
	 * 
	 * @param date
	 * @param day
	 * @return
	 */
	public static Date addDay(Date date, int day) {
		Calendar startCalendar = Calendar.getInstance();
		startCalendar.setTime(date);
		startCalendar.add(Calendar.DAY_OF_MONTH, day);
		return startCalendar.getTime();
	}
	/**
	 * 获取给定时间的N个月后的Date
	 * 
	 * @param date
	 * @param month
	 * @return
	 */
	public static Date addMonth(Date date, int month) {
		Calendar startCalendar = Calendar.getInstance();
		startCalendar.setTime(date);
		startCalendar.add(Calendar.MONTH, month);
		return startCalendar.getTime();
	}
	public static void main(String[] args) {
		System.out.println(getPreviousMonthDateString());
	}
}
