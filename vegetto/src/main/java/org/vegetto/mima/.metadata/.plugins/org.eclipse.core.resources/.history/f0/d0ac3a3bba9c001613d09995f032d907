package org.vegetto.format;

import java.text.DecimalFormat;

public class NumFormat {
	public static String getNumberh(long val) {
		String pattern = "00000000000000000";
		// String pattern="00000000";
		DecimalFormat fmt = new DecimalFormat(pattern);
		val = System.currentTimeMillis();
		return fmt.format(val);
	}

	public static void main(String[] args) {

//		System.out.printf("最牛的编号是：%030d%n", 7);
//		System.out.printf("最牛的编号是：%d%n", 7);
		String str = "0050580";
		System.out.println(str.replaceFirst("^0*", ""));
		
		String val="3";
		int len=3-val.length();
		System.out.println(len);
		String fromat="%0"+String.valueOf(len)+"d%n";
		System.out.println(fromat);
		String str1 = String.format("%0"+len+"d%n", Integer.parseInt(val));
		System.out.println(str1);
	}

}
