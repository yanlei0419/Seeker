package org.vegetto.common.base.db.result;

import java.io.Serializable;
import java.sql.ResultSet;
import java.sql.SQLException;

import org.vegetto.common.base.db.interfaces.IResultSetHandler;
import org.vegetto.common.base.db.interfaces.IRowProcessor;
@Deprecated
public class BeanHandler<T extends Serializable>  implements IResultSetHandler<T> {
	private final Class<T> type;
	private final IRowProcessor convert;

	public BeanHandler(Class<T> type) {
		this(type, ArrayHandler.ROW_PROCESSOR);
	}

	public BeanHandler(Class<T> type, IRowProcessor convert) {
		this.type = type;
		this.convert = convert;
	}

	public T handle(ResultSet rs) throws SQLException {
		return rs.next() ? this.convert.toBean(rs, this.type) : null;
	}
}